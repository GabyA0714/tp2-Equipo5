extends ../layout

block content
  h2 Editar Empleado
  p ID: #{empleado && empleado.id}
  a(href="/empleados") Volver
  br
  br

  if error
    p(style="color:red")= error

  if empleado
    form(action=`/empleados/editar/${empleado.id}`, method="post")
      div
        label(for="nombre") Nombre
        br
        input#nombre(type="text", name="nombre", value=empleado.nombre, required)

      div
        label(for="apellido") Apellido
        br
        input#apellido(type="text", name="apellido", value=empleado.apellido, required)

      div
        label(for="dni") DNI
        br
        input#dni(type="text", name="dni", value=empleado.dni, required)

      div
        label(for="email") Email
        br
        input#email(type="email", name="email", value=empleado.email, required)

      div
        label(for="rol") Rol
        br
        input#rol(type="text", name="rol", value=empleado.rol, required)

      div
        label(for="area") √Årea
        br
        input#area(type="text", name="area", value=empleado.area, required)

      br
      button(type="submit") Actualizar
    
  else
    p Empleado no encontrado
