extends layout

block content
  h1 Nuevo Paciente
  a(href="/pacientes") Volver
  br
  br

  if error
    p(style="color:red")= error

  form(action="/pacientes/nuevo", method="post")
    div
      label(for="nombre") Nombre
      br
      input#nombre(type="text", name="nombre", placeholder="Nombre", value=(paciente && paciente.nombre) ? paciente.nombre : "", required)

    div
      label(for="apellido") Apellido
      br
      input#apellido(type="text", name="apellido", placeholder="Apellido", value=(paciente && paciente.apellido) ? paciente.apellido : "", required)

    div
      label(for="dni") DNI
      br
      input#dni(type="text", name="dni", placeholder="DNI", value=(paciente && paciente.dni) ? paciente.dni : "", required)

    div
      label(for="email") Email
      br
      input#email(type="email", name="email", placeholder="Email", value=(paciente && paciente.email) ? paciente.email : "", required)

    div
      label(for="telefono") Teléfono
      br
      input#telefono(type="text", name="telefono", placeholder="Teléfono", value=(paciente && paciente.telefono) ? paciente.telefono : "", required)

    div
      label(for="obraSocial") Obra Social
      br
      input#obraSocial(type="text", name="obraSocial", placeholder="Obra Social", value=(paciente && paciente.obraSocial) ? paciente.obraSocial : "", required)

    div
      label(for="nroAfiliado") Nº Afiliado
      br
      input#nroAfiliado(type="text", name="nroAfiliado", placeholder="Número de afiliado", value=(paciente && paciente.nroAfiliado) ? paciente.nroAfiliado : "", required)

    div
      label(for="fechaNacimiento") Fecha de Nacimiento
      br
      input#fechaNacimiento(type="date", name="fechaNacimiento", value=(paciente && paciente.fechaNacimiento) ? paciente.fechaNacimiento : "", required)

    br
    button(type="submit") Guardar
