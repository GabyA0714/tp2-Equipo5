extends ../layout

block content
  h2 Nuevo Insumo
  a(href="/insumos") Volver
  br
  br

  if error
    p(style="color:red")= error

  form(action="/insumos/nuevo", method="post")
    div
      label(for="nombre") Nombre
      br
      input#nombre(type="text", name="nombre", placeholder="Nombre", value=(insumo && insumo.nombre) ? insumo.nombre : "", required)

    div
      label(for="categoria") Categoría
      br
      input#categoria(type="text", name="categoria", placeholder="Categoría", value=(insumo && insumo.categoria) ? insumo.categoria : "", required)

    div
      label(for="stock") Stock
      br
      input#stock(type="number", name="stock", placeholder="Stock", value=(insumo && insumo.stock) ? insumo.stock : "", required)

    div
      label(for="unidad") Unidad
      br
      input#unidad(type="text", name="unidad", placeholder="Unidad", value=(insumo && insumo.unidad) ? insumo.unidad : "", required)

    div
      label(for="fechaVencimiento") Fecha de vencimiento
      br
      input#fechaVencimiento(type="date", name="fechaVencimiento", value=(insumo && insumo.fechaVencimiento) ? insumo.fechaVencimiento : "", required)

    br
    button(type="submit") Guardar